#include<stdio.h>
#include<math.h>
int main()
{
        int i,j,k,n,s;
        printf("enter the value of n\n");
        scanf("%d",&n);
        int x=0;

        for(i=0;i<n;i++)
        {

                for(s=0;s<(2*(n-i)-1);s++)
                printf(" ");
                for(j=0;j<i+1;j++)
                {

                        printf("%d ",x+1);
                       x++;
                 }
                 printf("\n");
          }
   }
